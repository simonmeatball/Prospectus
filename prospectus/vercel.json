{
  "version": 2,
  "buildCommand": {
    "client": "cd client && npm install && npm run build",
    "api": "cd server && npm install"
  },
  "outputDirectory": {
    "client": "client/dist",
    "api": "server"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
